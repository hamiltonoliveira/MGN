@model Applicationcore.Entities.Adress

@{
    ViewData["Title"] = "Edit";
}

<h4>Endereço - Editar</h4>

<div>
    <a asp-action="Index">Painel</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ClientId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="street" class="control-label"></label>
                <input asp-for="street" maxlength="100" class="form-control" />
                <span asp-validation-for="street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="number" class="control-label"></label>
                <input asp-for="number" maxlength="10" class="form-control" />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="complement" class="control-label"></label>
                <input asp-for="complement" maxlength="20" class="form-control" />
                <span asp-validation-for="complement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="neightborhood" class="control-label"></label>
                <input asp-for="neightborhood" maxlength="100" class="form-control" />
                <span asp-validation-for="neightborhood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" maxlength="50" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="state" class="control-label"></label>
                <input asp-for="state" maxlength="2" class="form-control" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
