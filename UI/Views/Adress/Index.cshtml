@{
    ViewData["Title"] = "Index";
}

<h4>Painel</h4>

<div>
    <a asp-action="Create">Incluir</a>
</div>
<table class="table table-responsive-sm">
    <tbody>
        @foreach (var item in ViewBag.listagem)
        {
            <tr>
                <td>
                  @item.name
                </td>
                <td>
                    @item.street
                </td>
                <td>
                    @item.number
                </td>
                <td>
                    @item.complement
                </td>
                <td>
                    @item.neightborhood
                </td>
                <td>
                    @item.city
                </td>
                <td>
                    @item.state
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                 </td>
            </tr>
        }
    </tbody>
</table>
