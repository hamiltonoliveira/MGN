@model Applicationcore.Entities.Client

@{
    ViewData["Title"] = "Edit";
}

<h5>Editar</h5>

<hr />
<div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="identificationDocument" class="control-label"></label>
                    <input asp-for="identificationDocument" class="form-control" />
                    <span asp-validation-for="identificationDocument" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="birdDate" class="control-label"></label>
                    <input asp-for="birdDate" type="text" placeholder="DD-MM-YYYY" class="form-control" />
                    <span asp-validation-for="birdDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="gender" class="control-label"></label>
                    <input asp-for="gender" class="form-control" />
                    <span asp-validation-for="gender" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Retornar</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
